<?xml version="1.0" encoding="utf-8"?>
<com.shijingfeng.library.SwipeRemoveLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_remove"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.shijingfeng.base.widget.MarkerView
            android:id="@+id/mv_important"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|start"
            android:visibility="gone"
            app:bgColor="@color/red"
            app:position="left_top"
            app:text="重要" />

        <com.shijingfeng.base.widget.MarkerView
            android:id="@+id/mv_urgency"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|end"
            android:visibility="gone"
            app:bgColor="@color/orange"
            app:position="right_top"
            app:text="紧急" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="20dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="这是标题soghao;gh两个哈利和啥搞好闪光灯sghaogh身高干啥暗哨igha" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="14sp"
                tools:text="这是内容shgaosgha啥搞好闪是的噶话大概很高很高第哦啊很高的sghoaghidaoighapoghdapsoghisaosghaogihaogha光灯安哥拉杀害高会感到会感到和哇嘎东欧还是是过得好过得好尬刚好是感到sghasoghao" />

        </LinearLayout>

    </FrameLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/btn_complete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/dodger_blue"
        android:text="@string/完成"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/red"
        android:text="@string/删除"
        android:textSize="16sp"
        android:textColor="@color/white" />

</com.shijingfeng.library.SwipeRemoveLayout>