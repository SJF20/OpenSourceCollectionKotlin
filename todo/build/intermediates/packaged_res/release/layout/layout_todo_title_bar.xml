    <FrameLayout
        android:id="@+id/fl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/red" android:tag="layout/layout_todo_title_bar_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_back"
            android:tag="binding_1"      />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="是个大公流逝关个ssghshl顺利回归到萨格sghs置" />

        <ImageView
            android:id="@+id/iv_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_more"
            android:visibility="gone"
            android:tag="binding_2"         />

        <TextView
            android:id="@+id/tv_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            android:tag="binding_3"        
            tools:text="好友" />

    </FrameLayout>

         