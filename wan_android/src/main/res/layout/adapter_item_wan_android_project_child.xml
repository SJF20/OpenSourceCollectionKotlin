<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_article_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="70dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_latest"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="top"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_set_to_top_bg"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/新"
                android:textColor="@color/wan_android_theme_color" />

            <LinearLayout
                android:id="@+id/ll_tag_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_weight="1"
                android:minHeight="23dp"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="top"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="171dp"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="shi韶关好ingfengdsgsgssgsgsagagsadsghslg" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:maxLines="1"
                tools:text="2019-12-12 12:12" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="韶关好lgha杀伤力slghlh 韶关好-oho上了干lshghhash是啥联合国是两个哈喽上海分公司了哈干哈shghahh" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="14sp"
            tools:text="水果和搜狗和搜狗好感和搜狗和老师给施工事故搜狐共是个搜狗和搜狗和送货哦是狗屎狗屎收购收购收购收购施工is回公司和公司回购is胡歌iOS更换后红歌会搜" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_first_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="跨平台 / " />

            <TextView
                android:id="@+id/tv_second_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="Flutter" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/ckb_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_uncollected"
                android:checked="false" />

        </LinearLayout>

    </LinearLayout>

