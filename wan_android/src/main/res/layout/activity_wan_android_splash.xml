<?xml version="1.0" encoding="utf-8"?><!-- 启动 页面 -->
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:src="@mipmap/ic_wan_android_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:tag="@string/wan_android_theme_color_textColor"
            android:text="@string/wan_android_name"
            android:textSize="20sp"
            tools:textColor="@color/wan_android_theme_color" />

    </LinearLayout>

</layout>