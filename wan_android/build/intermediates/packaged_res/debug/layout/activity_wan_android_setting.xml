<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                                                                                 

                 
                                   
                                      
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_wan_android_setting_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/include_title_bar"
            layout="@layout/layout_wan_android_title_bar"
                                                                     />

        <LinearLayout
            android:id="@+id/ll_theme_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/主题颜色"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/自定义主题颜色" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_theme_color"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                tools:src="@color/wan_android_theme_color" />

        </LinearLayout>

    </LinearLayout>
         